@model BlogMaGiam.ViewModel.DashboardViewModel
@using Common;
@{
    Layout = null;
}

<div class="row">
    <div class="div-filter col-md-2">
        <select class="form-control" id="status" name="status" onchange="_dashboardJs.changeCalendar(this)">
            @if (Model.TypeCalendars != null && Model.TypeCalendars.Count > 0)
            {
                foreach (var item in Model.TypeCalendars)
                {
                    var selected = string.Empty;
                    if (item.Value == Model.Type)
                    {
                        selected = "selected";
                    }
                    <option value="@item.Value" @selected>
                        @item.Name
                    </option>
                }
            }
        </select>
    </div>
</div>
<br />
<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.TotalDay</h3>

                <p>New click in day</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="@Url.Action("Index","ClickMerchant",new { type=Constant.DAY})" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.TotalWeek</h3>

                <p>Click in week</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="@Url.Action("Index","ClickMerchant",new { type=Constant.WEEK})" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.TotalMonth</h3>

                <p>Click in month</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="@Url.Action("Index","ClickMerchant",new { type=Constant.MONTH})" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small box -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@Model.TotalYear</h3>
                <p>Click in year</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="@Url.Action("Index","ClickMerchant",new { type=Constant.YEAR})" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <!-- ./col -->
</div>
<!-- /.row -->
<br />

<div class="row">
    <div class="card" style="width:100%" id="card-count-click">
        @if (Model != null)
        {
            @Html.Partial("~/Views/Home/_ListView.cshtml", Model)
        }
    </div>
</div>